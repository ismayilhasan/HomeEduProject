@using EduHome.Models.Entities
@model CourseViewModel
@{
   
    var blogs = Model.Blogs;
    var categories = Model.Categories;
    var course = Model.Course;
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/assets/img/course/@course.ImageUrl" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@course.Title</h2>
                        <p>@course.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@course.Description</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@course.ApplyDetails</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p>@course.SertificationContent</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@course.StartTime</span></li>
                                <li>duration <span>@course.Duration</span></li>
                                <li>class duration <span>@course.ClassDuration</span></li>
                                <li>skill level <span>@course.SkilLevel</span></li>
                                <li>language <span>@course.Language</span></li>
                                <li>students <span>@course.StudentCount</span></li>
                                <li>assesments <span>@course.Assesment</span></li>
                            </ul>
                            <h3 class="red">course fee $789</h3>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in categories)
                            {
                                <li><a href="#">@item.Name</a></li>
                            }
                           
                        </ul>
                    </div>
                    @foreach (var item in blogs.Take(3))
                    {
                        <div class="single-blog-widget mb-50">
                            <div class="single-blog-banner">
                                <a href="blog-details.html" id="blog"><img src="~/assets/img/blog/@item.ImageUrl" alt="blog"></a>
                                <h2>best<br> eductaion<br> theme</h2>
                            </div>
                        </div>
                    }
                
                 
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a href="blog-details.html" class="mr-10 mb-10">course</a>
                            <a href="blog-details.html" class="mr-10 mb-10">education</a>
                            <a href="blog-details.html" class="mb-10">teachers</a>
                            <a href="blog-details.html" class="mr-10">learning</a>
                            <a href="blog-details.html" class="mr-10">university</a>
                            <a href="blog-details.html">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>