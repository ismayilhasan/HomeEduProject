@using EduHome.Models.Entities
@model List<Course>
@{
    List<Course> Courses = Model;
}

@foreach (var course in Courses)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="single-course mb-70">
        <div class="course-img">
            <a href="course-details.html">
                <img  src="~/assets/img/course/@course.ImageUrl" alt="course">
                <div class="course-hover">
                    <i class="fa fa-link"></i>
                </div>
            </a>
        </div>
        <div class="course-content">
            <h3><a href="course-details.html">@course.Title</a></h3>
            <p>@course.Description.Substring(0,18)</p>
            <a class="default-btn" asp-controller="Course" asp-action="Details" asp-route-id = "@course.Id">read more</a>
        </div>
    </div>
</div>
}
