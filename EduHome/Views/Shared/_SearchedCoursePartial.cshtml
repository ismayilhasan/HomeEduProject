@using EduHome.Models.Entities
@model List<Course>

@foreach (var course in Model)
{

    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">
        <li style="color:black; font-weight:bold;">@course.Title</li>
        <li><img style="width:100px;height:100px;" src="~/assets/img/course/@course.ImageUrl" /></li>
     </a>

}