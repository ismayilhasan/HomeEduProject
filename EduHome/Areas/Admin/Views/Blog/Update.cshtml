@model BlogUpdateViewModel

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Update Blog</h4>
                <img src="~/assets/img/blog/@Model.ImageUrl" />

                <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        <label asp-for="Image">Name</label>
                        <input asp-for="Image" class="form-control" placeholder="Name" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title" accept="image/*">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author">Author</label>
                        <input asp-for="Author" class="form-control" placeholder="Author" accept="image/*">
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description" accept="image/*">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>    <div class="form-group">
                        <label asp-for="Created">Created</label>
                        <input asp-for="Created" class="form-control" placeholder="Created" accept="image/*">
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>




                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-controller="Teacher" asp-action="Index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>


